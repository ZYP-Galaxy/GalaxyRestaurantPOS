<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f5f5f5" />
            <stroke
                android:width="1dp"
                android:color="#00a8ff" />
            <padding
                android:left="3dp"
                android:top="1dp"
                android:right="3dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f5f5f5"
                android:endColor="#f5f5f5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#008ad2" />

            <padding
                android:left="3dp"
                android:top="1dp"
                android:right="3dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>
