<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape android:shape="oval">
      <solid
          android:color="#7bc5f9" />
      <stroke
          android:width="1dp"
          android:color="#72acd4" />
    
      <padding
          android:left="1dp"
          android:top="1dp"
          android:right="1dp"
          android:bottom="1dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="oval">
      <gradient
          android:startColor="#7bc5f9"
          android:endColor="#72acd4"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#72acd4" />    
      <padding
          android:left="1dp"
          android:top="1dp"
          android:right="1dp"
          android:bottom="1dp" />
    </shape>
  </item>
</selector>
