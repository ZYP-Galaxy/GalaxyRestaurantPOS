<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#b51752" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="20dp"
          android:top="10dp"
          android:right="20dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#d37e9e"
          android:endColor="#bb1c6b"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#30B831" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="20dp"
          android:top="10dp"
          android:right="20dp"
          android:bottom="10dp" />
    </shape>
  </item>  
</selector>