                        android:id="@+id/btnMemDis"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:background="#008ad2"
                        android:textColor="@color/colorWhite"
                        android:onClick="btnMemDis_Click"
                        android:text="Member Discount"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/butSubmit"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="#008ad2"
                    android:onClick="butSubmit_click"
                    android:text="Confirm"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />

                <!-- added by TTA on [01-02-2019] -->

                <Spinner
                    android:id="@+id/cashierPrinters"
                    style="@style/spinner_style"
                    android:background="@drawable/spinnerborder"
                    android:spinnerMode="dropdown"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_test_printer"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="3dp"
                    android:background="#008ad2"
                    android:onClick="connectBT"
                    android:text="Print Test"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkBillPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Bill Not Print"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/chkHideComName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Hide Shop Info:"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>