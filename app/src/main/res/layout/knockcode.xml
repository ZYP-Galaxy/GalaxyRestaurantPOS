<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginbackground"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="280dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20dp"
            android:gravity="right" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="checkconnection_onClick"
                android:text="SVR.Status"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/constatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:onClick="checkconnection_onClick"
                android:padding="3dp"
                android:src="@drawable/greenstatus" />

            <Button
                android:id="@+id/butsetting"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/setting"
                android:onClick="butsetting_OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="@string/en_username"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:context=".LoginActivity" />

            <EditText
                android:id="@+id/txtusername"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:textColor="#000000" >
            </EditText>

            <Button
                android:id="@+id/btnselectuser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selectuser"
                android:onClick="btnselectuser_click" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/en_password"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:context=".LoginActivity" />

            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#000000" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/back"
                android:onClick="btnBack_OnClick"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="110dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="1"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="2"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="3"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button0"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="0"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="4"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="5"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="6"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnconfirm"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnconfirm_click"
                    android:text="Login"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button7"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="7"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button8"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="8"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button9"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btnNo_OnClick"
                    android:text="9"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="@drawable/loginbuttons"
                    android:onClick="btncancel_click"
                    android:text="Exit"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>