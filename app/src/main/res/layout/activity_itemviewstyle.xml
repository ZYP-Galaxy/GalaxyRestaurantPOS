<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item View Style"
        android:textSize="22dp"
        android:background="#006abf"
        android:textColor="#ffffff"
        android:padding="7dp">

    </TextView>

    <RadioGroup
        android:id="@+id/rdoitemviewstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rdowithoutclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Without Class Buttons"
            android:textSize="17sp"
            />

        <RadioButton
            android:id="@+id/rdowithclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With Class Buttons"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>



        <RadioButton
            android:id="@+id/rdofullcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Category"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>

    </RadioGroup>





    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>

</LinearLayout>