<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0c4de"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Customer Count Analysis"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:background="#0077c8"
            android:layout_margin="2dp"
            android:textSize="20sp" />

        <ScrollView
            android:id="@+id/newscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border"
                    android:gravity="center">


                    <RadioGroup
                        android:id="@+id/rdogrouptype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rdoprivate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:checked="true"
                            android:text="Private"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/rdobusiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Business"
                            android:textSize="20sp" />


                        <RadioButton
                            android:id="@+id/rdotravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Tourist"
                            android:textSize="20sp" />

                    </RadioGroup>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lblMale"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butmaleminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtmalecount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butmaleplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblFemale"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butfemaleminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtfemalecount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butfemaleplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblAdult"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Adult"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butadultminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtadultcount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butadultplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblChild"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Child"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butchildminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtchildcount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butchildplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblWestern"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Western"
                                android:textSize="20sp" />


                            <Button
                                android:id="@+id/butwesternminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtwesterncount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butwesternplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblAsian"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Asian"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butasianminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtasiancount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butasianplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/lblMyanmar"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Myanmar"
                                android:textSize="20sp" />


                            <Button
                                android:id="@+id/butmyanmarminus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareminus" />

                            <TextView
                                android:id="@+id/txtmyanmarcount"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/butmyanmarplus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/squareplus" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/butconfirm"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blackborder"
                        android:text="OK"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/butclose"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/blackborder"
                        android:text="Close"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>