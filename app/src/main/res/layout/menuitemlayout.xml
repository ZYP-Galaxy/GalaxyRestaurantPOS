<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <TextView
        android:id="@+id/txtorderid"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_weight="0.3"
        android:textColor="#111"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtOrdersr"
        android:layout_marginLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_weight="0.3"
        android:textColor="#111"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOrderdes"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_weight="2.5"
        android:textColor="#111"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOrderQtyMinus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/squareminus"
        android:gravity="right" />

    <TextView
        android:id="@+id/txtOrderqty"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:layout_weight="0.3"
        android:gravity="right"
        android:textColor="#111"
        android:textStyle="bold" />
 <!-- 1 -->

    <Button
        android:id="@+id/btnOrderQtyPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/squareplus"
        android:gravity="right" />

    <TextView
        android:id="@+id/txtOrderamount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="#111"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/btnOrderCancel"
        android:layout_width="35dp"
        android:layout_height="35dp"
         android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/cross_delete"
        android:gravity="right" />
     </LinearLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />
     </LinearLayout>  

</LinearLayout>