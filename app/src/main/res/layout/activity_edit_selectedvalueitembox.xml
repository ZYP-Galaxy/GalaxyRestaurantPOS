                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
                    
     <LinearLayout
         android:id="@+id/itemeditlayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_marginLeft="15dp" 
             android:layout_marginTop="10dp">

			 <TextView
				 android:id="@+id/textView4"
				 android:layout_width="170dp"
				 android:layout_height="wrap_content"
				 android:layout_marginRight="60dp"
				 android:text="Start Time :"
				 android:textSize="20sp"
				 android:textColor="#006064"/>

			 <TextView
                 android:id="@+id/textView4"
                 android:layout_width="170dp"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:text="End Time :"
                 android:textSize="20sp"
				 android:textColor="#BF360C"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="15dp" 
             android:layout_marginBottom="20dp">

             <TextView
                 android:id="@+id/txtKTV_StartTime"
                 android:layout_width="200dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="30dp"
                 android:layout_gravity="center"
                 android:textSize="20sp"
				 android:textColor="#006064" />

             <TextView
                 android:id="@+id/txtKTV_EndTime"
                 android:layout_width="180dp"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
				 android:layout_marginRight="30dp"
                 android:textSize="20sp"
				 android:textColor="#BF360C" />
             
             <Button
                 android:id="@+id/butCalculate"
                 android:layout_width="115dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/valueitembutton"
                 android:text="Calculate"
                 android:layout_gravity="center"
                 android:textColor="#FFFFFF"
                 />
             
             <Button
                 android:id="@+id/butKTVRemove"
                 android:layout_width="115dp"
                 android:layout_height="match_parent"
                 android:background="@drawable/valueitembutton"
                 android:textColor="#FFFFFF"
                 android:text="Remove" />
             
         </LinearLayout>
         
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="15dp" >

             <Button
                 android:id="@+id/butStCurrentGetTime"
                 android:layout_width="180dp"
                 android:layout_height="match_parent"
                 android:background="@drawable/valueitembutton"                 
                 android:text="Get Current Time" 
                 android:layout_marginRight="50dp"
                 android:textColor="#FFFFFF"
                 />

             <Button
                 android:id="@+id/butEndCurrentGetTime"
                 android:layout_width="180dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="30dp"
                 android:background="@drawable/valueitembutton"
                 android:text="Get Current Time" 
                 android:textColor="#FFFFFF"
                 />
             
             <Button
                 android:id="@+id/butSaveKTVData"
                 android:layout_width="115dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/valueitembutton"
                 android:text="Save"
                 android:textColor="#FFFFFF"
                 />
             
             <Button
                 android:id="@+id/butCancelKTVData"
                 android:layout_width="115dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/valueitembutton"
                 android:text="Cancel"
                 android:textColor="#FFFFFF"
                 />
             
         </LinearLayout>
         <TextView
             android:id="@+id/textView2"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginBottom="5dp"
             android:layout_marginTop="10dp"
             android:background="#b3c8b9" />

         <LinearLayout
             android:layout_width="432dp"
             android:layout_height="wrap_content"
             android:layout_weight="9.07"
             android:layout_marginLeft="15dp" 
             android:orientation="vertical" >

             <LinearLayout
             android:layout_width="432dp"
             android:layout_height="wrap_content"
             android:layout_weight="9.07"
             android:orientation="horizontal"
             android:layout_marginTop="10dp" >
	             <TextView
	                 android:id="@+id/textView5"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="40dp"
	                 android:layout_marginBottom="30dp"
	                 android:text="Total Time"
	                 android:textSize="20sp" />
	             
	             <TextView
	                 android:id="@+id/textView8"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="40dp"
	                 android:layout_marginBottom="30dp"
	                 android:text=":"
	                 android:textSize="20sp" />                 
	             
	             <TextView
	                 android:id="@+id/txtTotalTime"
	                 android:layout_width="150dp"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="20dp"
	                 android:gravity="right"
	                 android:text="Total Time"
	                 android:textSize="20sp" />

             </LinearLayout>
             
             <LinearLayout
             android:layout_width="432dp"
             android:layout_height="wrap_content"
             android:layout_weight="9.07"
             android:orientation="horizontal" >
	             <TextView
	                 android:id="@+id/textView6"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="15dp"
	                 android:text="Total Amount"
	                 android:textSize="20sp" />
	             <TextView
	                 android:id="@+id/textView9"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="40dp"
	                 android:layout_marginBottom="30dp"
	                 android:text=":"
	                 android:textSize="20sp" /> 

	             <TextView
	                 android:id="@+id/txtTotalAmount"
	                 android:layout_width="150dp"
	                 android:layout_height="wrap_content"
	                 android:layout_marginRight="20dp"
	                 android:gravity="right"
	                 android:text="Total Amount"
	                 android:textSize="20sp" />

             </LinearLayout>
         </LinearLayout>
     </LinearLayout>

       </LinearLayout>